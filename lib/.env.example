NEXT_PUBLIC_APP_URL=https://your-domain

# --- Supabase ---
# Публичные (могут быть использованы на клиенте)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Сервисный ключ (ТОЛЬКО как секрет на бэкенде / Vercel env, НИКОГДА не на клиенте)
SUPABASE_SERVICE_ROLE_KEY=
# (Fallback legacy name — не использовать в новых конфигурациях)
# SUPABASE_SERVICE_ROLE=

# Временный bypass кода промо (для отладки — удалить после использования)
# PROMO_BYPASS_CODE=welcomeai

JWT_SECRET=change_me_strong

# --- Upstash Redis (rate limit) ---
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# --- OpenAI / AI Models ---
# Никогда не коммить реальный ключ в репозиторий!
# Локально создайте файл .env.local (или используйте секреты в проде) и задайте OPENAI_API_KEY.
OPENAI_API_KEY=YOUR_OPENAI_API_KEY # placeholder, НЕ добавляйте реальный ключ
# Пользовательский base URL (если используете прокси или совместимые API, иначе оставьте по умолчанию)
# OPENAI_API_BASE_URL=https://api.openai.com/v1

# Необязательно: модель и голос TTS (fallback значения уже заданы в коде)
# OPENAI_TTS_MODEL=gpt-4o-mini-tts
# OPENAI_TTS_VOICE=nova
